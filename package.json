{
  "name": "quizlab-reader",
  "version": "1.3.0",
  "description": "QuizLab-inspired split screen Electron app with PDF viewer and AI assistant",
  "main": "src/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ozymandias-get/Quizlab-Reader.git"
  },
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --config vite.config.js",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "build": {
    "appId": "com.quizlab.reader",
    "productName": "Quizlab Reader",
    "copyright": "Copyright Â© 2026 Quizlab Reader",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico",
      "publisherName": "Quizlab Reader",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Quizlab Reader",
      "include": "installer/installer.nsh",
      "installerLanguages": [
        "en_US",
        "tr_TR",
        "zh_CN",
        "es_ES",
        "ar"
      ],
      "language": "1033",
      "warningsAsErrors": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "ozymandias-get",
      "repo": "Quizlab-Reader",
      "releaseType": "release"
    },
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "optionalDependencies": {
    "canvas": "^2.11.2"
  },
  "keywords": [
    "electron",
    "react",
    "pdf-viewer",
    "ai-assistant",
    "study-tool"
  ],
  "author": "ozymandias-get",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^2.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.10",
    "vitest": "^2.1.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "electron-updater": "^6.1.7",
    "html2canvas": "^1.4.1",
    "pdfjs-dist": "^3.11.174",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}